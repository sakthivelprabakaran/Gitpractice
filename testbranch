#!/usr/bin/env python3
"""
Generate N random numbers and print them and their sum.

Usage examples:
  python3 Test.py                # generate 10 random integers 1..100
  python3 Test.py --type float   # generate 10 random floats 1.0..100.0
  python3 Test.py -n 5 --min 0 --max 1 --seed 42
"""

import argparse
import random
from typing import List, Optional


def generate_numbers(count: int, mode: str, low: float, high: float, seed: Optional[int] = None) -> List[float]:
	"""Generate a list of random numbers.

	Args:
		count: how many numbers to generate
		mode: 'int' or 'float'
		low: minimum (inclusive)
		high: maximum (inclusive)
		seed: optional random seed for reproducibility

	Returns:
		List of generated numbers (ints when mode=='int', floats otherwise).
	"""
	if seed is not None:
		random.seed(seed)

	nums: List[float] = []
	if mode == "int":
		low_i, high_i = int(low), int(high)
		for _ in range(count):
			nums.append(random.randint(low_i, high_i))
	else:
		for _ in range(count):
			nums.append(random.uniform(low, high))

	return nums


def main() -> None:
	parser = argparse.ArgumentParser(description="Generate random numbers and print their sum.")
	parser.add_argument("--count", "-n", type=int, default=10, help="How many numbers to generate (default 10)")
	parser.add_argument("--type", "-t", choices=["int", "float"], default="int", help="Number type: int or float")
	parser.add_argument("--min", type=float, default=1.0, help="Minimum value (inclusive)")
	parser.add_argument("--max", type=float, default=100.0, help="Maximum value (inclusive)")
	parser.add_argument("--seed", type=int, default=None, help="Optional random seed for reproducibility")
	args = parser.parse_args()
	

	nums = generate_numbers(args.count, args.type, args.min, args.max, args.seed)
	total = sum(nums)

	print(f"Generated {args.count} {args.type} numbers between {args.min} and {args.max}:")
	if args.type == "float":
		# print floats rounded for readability
		print([round(x, 4) for x in nums])
		print(f"Sum: {round(total, 4)}")
	else:
	
		print(f"Sum: {int(total)}")
		print(f"Sum: {int(total)}")


if __name__ == "__main__":
	main()